@model Studentscreeningsystem.Models.USER
@{if (Model != null)
  {     
<div id="expanderContent">
    @Html.HiddenFor(model => model.User_Id)
    @Html.HiddenFor(model => model.Insortable)
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Username, "رقم الهوية", htmlAttributes: new { @class = "control-label col-md-6 text-info" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Username, new { @class = "singlelinetextinput form-control" })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Firstname, "الإسم", htmlAttributes: new { @class = "control-label col-md-4 text-info" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Firstname, new { @class = "singlelinetextinput form-control" })
                    @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Lastname, "اللقب", htmlAttributes: new { @class = "control-label col-md-6 text-info" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Lastname, new { @class = "singlelinetextinput form-control" })
                    @Html.ValidationMessageFor(model => model.Lastname, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Passeword, "الرقم العسكري", htmlAttributes: new { @class = "control-label col-md-8 text-info" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Passeword, new { @class = "singlelinetextinput form-control" })
                    @Html.ValidationMessageFor(model => model.Passeword, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Comfirmepasseword, "إعادةالرقم العسكري", htmlAttributes: new { @class = "control-label col-md-6 text-info" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Comfirmepasseword, new { @class = "singlelinetextinput form-control" })
                    @Html.ValidationMessageFor(model => model.Comfirmepasseword, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Title, "المسمى الوظيفي", htmlAttributes: new { @class = "control-label col-md-6 text-info" })
                <div class="col-md-8">
                    @Html.DropDownListFor(model => model.Title, new SelectList(new[] { Model.Title, "إداري", "خريج" }), htmlAttributes: new { @class = "form-control", value = Model.Title })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>

    <div class="row">
  
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Inactive, "حالة المستخدم", htmlAttributes: new { @class = "control-label col-md-6 text-info" })
                <div class="col-md-8">
                 
                    <div class="form-check">

                        مفعل
                        @Html.RadioButtonFor(m => m.Inactive, "false")
                        غير مفعل
                        @Html.RadioButtonFor(m => m.Inactive, "true")
                        @Html.ValidationMessageFor(model => model.Inactive, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
  }
}
