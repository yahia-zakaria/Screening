@model Studentscreeningsystem.Models.Requirement

@{
    ViewBag.Title = "حذف متطلب";
}

<link href="~/Content/custumbutton.css" rel="stylesheet" />

<div class="card">
    <div class="card-header">
        هل أنت متأكد من حذف هذا المتطلب؟
    </div>
    <div class="card-body">
        <h5 class="card-title"> @Html.DisplayFor(model => model.NameRequirement)</h5>
        <p class="card-text"><span>النوع:</span>@Html.DisplayFor(model => model.Categorie)</p>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <button type="submit" class="btn "><i class="fa fa-trash"></i> حذف</button>

            @Html.ActionLink("إلغاء", "Index", null, new { @class = "btn btnlink  fa fa-close" })


        }
    </div>
</div>

<div>

    @Html.ActionLink("الرجوع إلى القائمة السابقة", "Index")
</div>