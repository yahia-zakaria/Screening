@model Studentscreeningsystem.Models.Requirement

@{
    ViewBag.Title = "تعديل متطلب سلاح";
}

<link href="~/Content/custumbutton.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdRequirement)
    <div class="panel-heading">تعديل متطلب سلاح </div>

    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(model => model.NameRequirement, "اسم المتطلب", htmlAttributes: new { @class = "text-info" })
            @Html.EditorFor(model => model.NameRequirement, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NameRequirement, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Categorie, "نوع المتطلب", htmlAttributes: new { @class = "text-info" })
            @Html.EnumDropDownListFor(model => model.Categorie, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Categorie, "", new { @class = "text-danger" })
        </div>

    </div>
    <br />
    <div class="col-md-12">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <button type="submit" class="btn "><i class="fa fa-edit"></i> تعديل</button>
                @Html.ActionLink("إلغاء", "Index", null, new { @class = "btn btnlink  fa fa-close" })
            </div>
        </div>
    </div>

   
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}