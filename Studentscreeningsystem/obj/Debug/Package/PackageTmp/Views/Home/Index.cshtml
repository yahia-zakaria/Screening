@using System.Globalization;
@{
    ViewBag.Title = "اHome Page  of the system";
}
<style>
    .card {
        padding-top: 10px;
    }

    .card-img-top {
        width: 16%;
    }

    .card-deck {
        margin-top: 30px;
        margin-bottom: 30px
    }

        .card-deck .card {
            background-color: #e8e8e8
        }

    a {
        color: #29504d;
    }

        a:hover {
            color: #00a159;
            text-decoration: none
        }

    h5 {
        color: #00a159
    }
</style>


<p>@User.Identity.Name</p>



@*Start card-deck 1*@
<div class="card-deck">

    @*عدد المستخدمين*@
